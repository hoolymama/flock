global proc flock.init(string $moduleName) {
	
	string $moduleMenu = module.menuName( $moduleName );

	setParent -m $moduleMenu;


	module.subMenu($moduleMenu, "Artificial Life|Flock");
		
	menuItem -l "Create" -annotation ("Pick Some Particles") -c "flock.create();";
	menuItem -l "Add Meshes" -annotation ("Pick meshes and a flock") -c "flock.addMeshes();";
	menuItem -l "Add Attribute" -annotation ("Pick a flock") -c "flock.addAttribute();";

	 

	menuItem -l "Extract Heroes" -annotation ("Pick Some Particle components") -c "flock.extractHeroes();";
	menuItem -l "Cull from Camera" -annotation ("Pick Camera and Particles") -c "flock.cameraCull;";



	setParent -m $moduleMenu;


}

